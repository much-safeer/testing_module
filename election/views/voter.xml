<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_voter_tree" model="ir.ui.view">
        <field name="name">election.voter.tree</field>
        <field name="model">election.voter</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="vote" />
            </tree>
        </field>
    </record>

    <record id="view_voter_form" model="ir.ui.view">
        <field name="name">election.voter.form</field>
        <field name="model">election.voter</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                 <div class="oe_title">
                    <h1><field name="name" readonly="1"/></h1>
                </div>
                    <group>
                            <field name="name" />
                            <field name="vote" />
                    </group>
                </sheet> 
            </form>
        </field>
    </record>

    <record id="voters_action" model="ir.actions.act_window">
        <field name="name">Voters</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">election.voter</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first Voter!
            </p>
        </field>
    </record>

    <menuitem id="election_root"
              name="Election"
              sequence="10"/>
    

    <menuitem id="election_voter_root"
              name="Voters"
              parent="election_root"
              sequence="10"/>

    <menuitem id="election_voter"
              name="Voters"
              parent="election_voter_root"
              action="voters_action"
              sequence="10"/>

</odoo>