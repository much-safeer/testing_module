<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_candidate_tree" model="ir.ui.view">
        <field name="name">election.candidate.tree</field>
        <field name="model">election.candidate</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
                <field name="total_votes" />
                <field name="voter_ids" />
            </tree>
        </field>
    </record>

    <record id="view_candidate_form" model="ir.ui.view">
        <field name="name">election.candidate.form</field>
        <field name="model">election.candidate</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="voter_ids" widget="many2many_tags"/>
                        <field name="total_votes" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="candidates_action" model="ir.actions.act_window">
        <field name="name">Candidates</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">election.candidate</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                create your first candidate!
            </p>
        </field>
    </record>


    <menuitem id="election_candidate_root" name="Candidates" parent="election_root" sequence="10"/>

    <menuitem id="candidate_voter" name="Candidates" parent="election_candidate_root" action="candidates_action" sequence="10"/>

</odoo>